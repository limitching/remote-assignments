extends layout

block content
  h1.error #{error}
  section.main
    div.set-row-in-center
      Section.sign-up
        h1 Sign-up Form
        form(action="/signup",method="post")
          label(for="email") Email:
          input#sign-in-email(type="email",name="email",class="input")
          br
          label(for='password') Password:
          input#sign-in-password(type='password', name='password',class="input")
          br
          input(type='submit', value='Sign-up',class="submit")
      Section.sign-in
        h1 Sign-in Form
        form(action="/signin",method="post")
          label(for="email") Email:
          input#sign-up-email(type="email",name="email",class="input")
          br
          label(for='password') Password:
          input#sign-up-password(type='password', name='password',class="input")
          br
          input(type='submit', value='Sign-in',class="submit")